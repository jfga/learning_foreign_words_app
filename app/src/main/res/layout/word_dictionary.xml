<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dictionary_card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp"
        android:background="@drawable/custom_input">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:id="@+id/relative_layout_word_text_view">

            <TextView
                android:id="@+id/watch_mistakes_text_view_word_card_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:text="Word"
                android:maxLines="1"
                android:textSize="20sp"
                android:ellipsize="end"
                android:layout_alignParentStart="true"/>

        </RelativeLayout>


        <TextView
            android:id="@+id/watch_mistakes_text_view_translation_card_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="4dp"
            android:layout_alignParentRight="true"
            android:layout_toEndOf="@id/relative_layout_word_text_view"
            android:text="Translation"
            android:textAlignment="textEnd"
            android:maxLines="1"
            android:textSize="20sp"
            android:ellipsize="end"/>

        <TextView
            android:id="@+id/text_view_definition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/relative_layout_word_text_view"
            android:text="Definition of word"
            android:textSize="15sp"
            android:textColor="@color/lots_darker_bone"/>
    </RelativeLayout>

</androidx.cardview.widget.CardView>